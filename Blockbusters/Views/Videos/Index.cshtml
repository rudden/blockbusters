@model Blockbusters.ViewModels.VideosViewModel

<p class="title is-1 is-spaced">@Model.Header</p>

@foreach (var video in Model.Paging.Data)
{
	<div class="card">
		<div class="card-icon">
			<i class="fa fa-video-camera"></i>
		</div>
		<div class="card-content">
			<div class="media-content">
				<div class="media-left">
					<p class="title is-4">@video.Title</p>
					<p class="subtitle is-6"><small>@video.Subtitle</small></p>
				</div>
			</div>
			<div class="content" style="margin-top: 15px">@video.Storyline</div>
		</div>
		<footer class="card-footer">
			<a href="#" class="card-footer-item">Rent Movie <i class="fa fa-credit-card" style="margin-left: 7px"></i></a>
			<a href="/videos/@video.Id" class="card-footer-item">View Details <i class="fa fa-info-circle" style="margin-left: 7px"></i></a>
		</footer>
	</div>
}